.chat-main
  .main-header
    .left-header
      .left-header__name
        = @group.name
      %ul.left-header__members
        Member:
        %li.left-header__member
          - @group.users.each do |user|
            = user.name
    .right-header 
      .right-header__botton
        = link_to "Edit", edit_group_path(@group.id)

